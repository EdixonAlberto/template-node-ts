    "start": "node dist/src"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^13.7.4",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "4.0.3"
  },
  "engines": {
    "node": "^12.18.0",
    "yarn": "^1.22.5"
  }
}
