{
  "name": "template-node-ts",
  "version": "0.0.1",
  "description": "Template to create any type of service using Nodejs with TypeScript",
  "keywords": [
    "template",
    "node",
    "typescript"
  ],
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Edixon PiÃ±a",
    "email": "edixonalbertto@gmail.com"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier --write ./src/**/*.ts",
    "build": "tsc && tsc-alias",
    "dev": "cross-env NODE_ENV=development nodemon --config",
    "start": "yarn build && cross-env NODE_ENV=production node dist"
  },
  "nodemonConfig": {
    "ext": ".ts,.env",
    "watch": [
      "src",
      "env"
    ],
    "verbose": false,
    "exec": "yarn build && node dist"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.11",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^1.19.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  },
  "engine": {
    "node": ">=14.18.2",
    "yarn": "~1.22.0"
  }
}
