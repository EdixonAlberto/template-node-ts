{
  "name": "template-node-ts",
  "version": "0.0.1",
  "description": "Basic template to start a project using nodejs with typescript",
  "keywords": [
    "template",
    "node",
    "typescript"
  ],
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Edixon Pi√±a",
    "email": "edixonalbertto@gmail.com",
    "url": "https://edixonalberto.com"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "prettier --write ./src/**/*.ts",
    "build": "tsc && tsc-alias",
    "dev": "nodemon -e ts -w src --exec \"yarn start\"",
    "start": "yarn build && node dist"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "tsc-alias": "^1.4.1",
    "typescript": "^4.4.3"
  },
  "homepage": "https://github.com/EdixonAlberto/template-node-ts#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/EdixonAlberto/template-node-ts/tree/main"
  },
  "engine": {
    "node": "~16.13.0",
    "yarn": "~1.22.5"
  }
}
